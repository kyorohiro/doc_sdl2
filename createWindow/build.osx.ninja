cc = gcc

rule obj
 command = ${cc} -c $in -o $out -framework SDL2 -O2 -I/usr/local/Cellar/sdl2/2.0.5/include/SDL2/ -L/usr/local/Cellar/sdl2/2.0.5/lib/
rule exe
 command = ${cc} $in -o $out -O2 -lSDL2main -lSDL2 -L/usr/local/Cellar/sdl2/2.0.5/lib/

build test.o: obj test.c
build test.exe: exe test.o
