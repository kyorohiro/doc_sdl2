cc = gcc
cmd = cmd /c
objExt = o
appExt = exe
objLib = a
sep = /

rule obj
 command = ${cc} -c $in -o $out -O2 -I/usr/local/Cellar/sdl2/2.0.5/include/SDL2/ -DPLATFORM_OSX
rule exe
 command = ${cc} $in -o $out -O2 -lSDL2main -lSDL2 -L/usr/local/Cellar/sdl2/2.0.5/lib/

subninja createWindow${sep}build.ninja
subninja event${sep}build.ninja
